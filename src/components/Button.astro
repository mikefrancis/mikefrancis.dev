---
const { as: Element = "button", class: providedProps, ...props } = Astro.props;
const componentClasses =
  "group bg-zinc-200 text-black hover:bg-zinc-100 dark:bg-zinc-600 dark:text-white dark:hover:bg-zinc-500 text-sm rounded-md inline-flex items-center px-4 py-2 font-semibold";
---

<Element {...props} class:list={[componentClasses, providedProps]}>
  <slot />
</Element>
