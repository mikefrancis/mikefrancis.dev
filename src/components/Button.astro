---
const { as: Element = "button", class: providedProps, ...props } = Astro.props;
const componentClasses =
  "group bg-slate-200 text-black hover:bg-slate-100 dark:bg-slate-600 dark:text-white dark:hover:bg-slate-500 text-sm rounded-md inline-flex items-center px-4 py-2 font-semibold";
---

<Element {...props} class:list={[componentClasses, providedProps]}>
  <slot />
</Element>
