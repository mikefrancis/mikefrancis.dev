---
import { Image } from "astro:assets";
import ThemeToggle from "../components/ThemeToggle.astro";
import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/800.css";
import "../styles/global.css";

const { title, description, image } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    {image ? <meta property="og:image" content={`https:${image}`} /> : ""}
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Your Site's Title"
      href={new URL("https://www.mikefrancis.dev/rss.xml", Astro.site)}
    />
  </head>
  <body
    class="antialiased min-h-screen transition bg-white text-black dark:bg-zinc-700 dark:text-white"
  >
    <div class="max-w-5xl mx-auto px-5 md:px-10 py-20">
      <header class="flex items-center justify-between pb-10">
        <a href="/">
          <Image
            class="max-w-full rounded-full mr-2"
            src="/me.jpg"
            loading="eager"
            alt="Me"
            width={48}
            height={48}
          />
        </a>
        <ThemeToggle />
      </header>
      <main>
        <slot />
      </main>
      <footer class="pt-20">
        <p>All content &copy; {new Date().getFullYear()}.</p>
      </footer>
    </div>
  </body>
</html>
